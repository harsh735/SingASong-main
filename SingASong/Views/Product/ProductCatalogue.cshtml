@{
    ViewData["Title"] = "Product Catalogef";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha384-vz5WsF+4QzC7F5pk3CpR86+nw7UvTVIkHva1RtxALOz2sxF2x98UOpPKa5l2aa3Z" crossorigin="anonymous">


<style>
    body {
        font-family: monospace;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
    }

    .navigation-bar {
        background-color: #333;
        color: #fff;
        padding: 20px;
        width: 20%;
        box-sizing: border-box;
        position: fixed;
        height: 100vh;
    }

    .navigation-bar a {
        display: block;
        width: 100%;
        margin-bottom: 10px;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: #fff;
        text-align: left;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .navigation-bar a:hover  {   
        background-color: #2980b9;
    }

    .icon {
        margin-right: 10px;
    }

    .product-container {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
        width: 70%;
        margin-left: 25%;
    }

    .product {
        border: 1px solid #ddd;
        margin: 10px;
        padding: 15px;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product img {
        max-width: 100px;
        border-radius: 5px;
    }

    .product-details {
        flex: 1;
        margin-left: 20px;
        text-align: left;
        font-family: monospace;
    }

    .product-details h3 {
        color: #333;
    }

    .product-details p {
        color: #666;
        margin-bottom: 10px;
    }

    .product-details span {
        font-weight: bold;
    }

    .add-to-cart {
        background-color: #3498db;
        color: #fff;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .add-to-cart:hover {
        background-color: #2980b9;
    }
</style>

<div class="navigation-bar">
    <a asp-area="" asp-controller="Orders" asp-action="Cart">Cart</a>
    <a href="#">Search</a>
    <a href="#">Downloads</a>
    <a href="#">View Profile</a>
</div>

<div class="product-container">
    @for (int i = 0; i < 10; i++)
    {
        <div class="product">
            <img src="https://placekitten.com/50/54" alt="Album Cover">
            <div class="product-details">
                <h3>Album 1</h3>
                <p>Artist: Arijit Singh</p>
                <p>Price: ₹59.99</p>
                <p>Rating: <span>4.5</span>/5</p>
            </div>
            <button class="add-to-cart">Add to Cart</button>
        </div>

        <div class="product">
            <img src="https://placekitten.com/50/51" alt="Album Cover">
            <div class="product-details">
                <h3>Album 2</h3>
                <p>Artist: Ed Sheeran</p>
                <p>Price: ₹89.99</p>
                <p>Rating: <span>4.8</span>/5</p>
            </div>
            <button class="add-to-cart">Add to Cart</button>
        </div>
    }
</div>
