@{
    ViewData["Title"] = "Payments";

}

    <style>
        body {
            font-family: monospace;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            justify-content: center;
            align-items: center;
            display: flex;
            height: 100vh;
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 50px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        .method {
            flex-direction: column;
            margin-bottom: 20px;
        }

            .method input[type="radio"] {
                display: none;
            }

            .method label {
                display: block;
                background-color: #f5f5f5;
                padding: 15px;
                border-radius: 5px;
                cursor: pointer;
                margin-bottom: 10px;
                transition: background-color 0.3s, color 0.3s;
            }

                .method label:hover {
                    background-color: #e0e0e0;
                    color: #333;
                }

            .method input[type="radio"]:checked + label {
                background-color: #007bff;
                color: #fff;
            }

        .button {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .button:hover {
            background-color: #0056b3;
        }
    </style>

<body>
    <div class="container">
        <div class="title">Select Payment Method</div>
        <form>
            <div class="method">
                <input type="radio" id="cash" name="method" value="cash" required>
                <label for="cash">Cash</label>
                <input type="radio" id="netbanking" name="method" value="netbanking">
                <label for="netbanking">Net Banking</label>
                <input type="radio" id="upi" name="method" value="upi">
                <label for="upi">UPI</label>
            </div>
            <br>
            <button class="button btn-primary"><a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="PaymentsThanks">Place order</a></button>
        </form>
    </div>
</body>
