@{
    ViewData["Title"] = "View Records";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Records</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: monospace;
            background: url('https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 8px;
            width: 50%;
        }

        table {
            width: 100%;
            max-width: 800px;
            border-collapse: collapse;
            margin: 16px 0;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        input[type="date"] {
            padding: 6px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
        }

        button {
            padding: 6px 12px;
            margin: 5px 0;
            border: none;
            border-radius: 4px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                background-color: #45a049;
            }

        .from-to {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .from, .to {
            width: 48%; /* Adjusted width for better spacing */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>View Records</h1>
        <br></br>
        <form>
            <div class="from-to">
                <div class="from">
                    <label for="from">From:</label>
                    <input type="date" id="from" name="from">
                </div>
                <div class="to">
                    <label for="to">To:</label>
                    <input type="date" id="to" name="to">
                </div>
            </div>
            <button type="button" id="show-btn">Show Records</button>
        </form>

        <table id="records-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Insert records here -->
            </tbody>
        </table>
    </div>
</body>
</html>